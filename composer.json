{
    "name": "theodorejb/array-utils",
    "description": "Useful functions for working with arrays",
    "license": "MIT",
    "authors": [
        {
            "name": "Theodore Brown",
            "email": "theodorejb@outlook.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "jakub-onderka/php-parallel-lint": "^0.9.2"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.4",
        "squizlabs/php_codesniffer": "^2.7",
        "phpunit/phpunit": "^5.6"
    },
    "autoload": {
        "files": ["src/ArrayUtils.php"]
    },
    "scripts": {
        "test": [
            "parallel-lint . --exclude vendor",
            "phpmd . text cleancode,codesize,controversial,design,naming,unusedcode --exclude data,puphpet,vendor",
            "phpcs --standard=PSR2 --ignore=vendor/* -np --report=full .",
            "phpunit --verbose"
        ]
    }
}
